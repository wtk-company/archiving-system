@model IEnumerable<ArchiveProject2019.Models.UserGroup>
@{
    ViewBag.Title = "عرض مستخدمين المجموعة";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}



@Html.Partial("_StartView")




@if (ViewBag.Msg != null)
{

    if (ViewBag.Msg == "DeleteSuccess")
    {
        <div class="alert alert-danger enterRemove" style="text-align:center;font-size:larger">
            <span class="glyphicon glyphicon-bell"></span>
            تمت عملية إزالة المستخدم بنجاح


        </div>
    }

    if (ViewBag.Msg == "EditSuccess")
    {
        <div class="alert alert-success enterRemove" style="text-align:center;font-size:larger">
            <span class="glyphicon glyphicon-bell"></span>
            تمت عملية تعديل حالة المستخدم بنجاح
        </div>  
    }



}

<a href="@Url.Action("Index","Groups")" class="btn btn-default">عودة لقائمةالمجموعات  <i class="glyphicon glyphicon-backward"></i></a>

<table id="UsersGroup" class="table table-striped table-bordered table-hover dt" style="text-align:center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Group.Name)
            </th>



            
          
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.CreatedById)
            </th>

            <th>
                العمليات المتاحة
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Group.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FullName)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy.FullName)
                </td>
                <td>

                   
                    <button data-UsersGroup-id="@item.Id" title="إزاله من المجموعة" class="btn btn-link js-delete  btn-xs"><span class="glyphicon glyphicon-trash"></span></button>
                    <button data-UsersGroup-id="@item.Id" title="التفاصيل" class="btn btn-link js-details  btn-xs"><span class="glyphicon glyphicon-book"></span></button>
                    <button data-UsersGroup-id="@item.UserId" title="تفاصيل المستخدم" class="btn-link js-DetailsUser  btn-xs  glyphicon glyphicon-user"></button>


                </td>
            </tr>
        }
    </tbody>


</table>


@Html.Partial("_LastView")




<div class="modal fade" tabindex="-1" id="NewModel" sdata-keyboard="true" data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 id="changeText" class="modal-title"></h4>
            </div>
            <div class="modal-body" id="partialPlaceHolder" style="margin-top:30px">

            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>








    $("#btnRefreshModel").on("click", function () {

        window.location.replace('@Url.Action("Index", "UsersGroups", new { Id="none"})');


    });






    $("#UsersGroup").on("click", ".js-delete", function () {

        $("#changeText").text("القائمة الفرعية- إزالة مستخدم من المجموعة");

        var url = '@Url.Action("Delete", "UsersGroups")';
        url = url + '/' + $(this).attr("data-UsersGroup-id") ;

        $("#partialPlaceHolder").load(url, function () {
            $('#NewModel').modal('show');
        });

    });





    $("#UsersGroup").on("click", ".js-details", function () {

        $("#changeText").text("القائمة الفرعية- تفاصيل مستخدم من المجموعة");

        var url = '@Url.Action("Details", "UsersGroups")';
        url = url + '/' + $(this).attr("data-UsersGroup-id") ;

        $("#partialPlaceHolder").load(url, function () {
            $('#NewModel').modal('show');
        });

    });



    $("#UsersGroup").on("click", ".js-DetailsUser", function () {

        $("#changeText").text("القائمة الفرعية- معلومات مستخدم معين");

        var url = '@Url.Action("Details", "Users")';
        url = url + '/' + $(this).attr("data-UsersGroup-id");

        $("#partialPlaceHolder").load(url, function () {
            $('#NewModel').modal('show');
        });

    });




</script>
