@model ArchiveProject2019.Models.Form

@{
    ViewBag.Title = "تعديل نموذج";
    Layout = "~/Views/Shared/_Layout2.cshtml";

}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CreatedAt)
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.CreatedAt)

        @Html.Hidden("OldName", (string)ViewBag.OldName)
        @Html.HiddenFor(model => model.CreatedById)




        <div class="form-group">
            @Html.LabelFor(model => model.FormName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FormName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FormName, "", new { @class = "text-danger" })
            </div>
        </div>




        <div class="modal-footer justify-content-center" style="margin-top:50px">

            <input type="submit" title="إضافة النموذج" value="تعديل نموذج" class="btn btn-success" />
            <button type="button" title="إغلاق النافذة" class="btn btn-warning" data-dismiss="modal">إغلاق</button>
        </div>






    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
