@model ArchiveProject2019.Models.SealDocument

@{
    ViewBag.Title = "تسديد الوثيقة";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}

@Html.Partial("_StartView")

<div style="margin-bottom: 30px;">
    <a href="@Url.Action("index","Documents")" class="btn btn-primary">عودة لقائمةالوثائق  <i class="glyphicon glyphicon-backward"></i></a>
    <hr />
</div>

@using (Html.BeginForm("Create", "Seals", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
            
        @Html.HiddenFor(s => s.DocumentId)

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Message, 10, 40, htmlAttributes: new { style = "width: 100%; max-width: 100%;" })
                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.File, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-10">
                <input type="file" name="SealFile" class="btn-warning" id="SealFile" />
                @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input type="submit" value="تسديد" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@Html.Partial("_LastView")


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
