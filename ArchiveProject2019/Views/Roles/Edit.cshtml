@model ArchiveProject2019.Models.RoleViewModel

@{
    ViewBag.Title = "تعديل دور محدد";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Hidden("OldName", (string)ViewBag.OldName)
    @Html.Hidden("RoleId", (string)ViewBag.RoleId)
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>





        <div class="modal-footer justify-content-center" style="margin-top:50px">
            <input title="تعديل الدور المحدد" type="submit" value="تعديل الدور" class="btn btn-success" />


            <button title="اغلاق النافذة" type="button" class="btn btn-warning" data-dismiss="modal">إغلاق</button>
        </div>


    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
