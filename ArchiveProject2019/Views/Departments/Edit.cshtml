@model ArchiveProject2019.Models.Department

@{
    ViewBag.Title = "تعديل قسم";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
      
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(m=>Model.CreatedAt)
        @Html.HiddenFor(m => Model.CreatedById)
        @Html.HiddenFor(m=>m.ParentId)


        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

     


        <div class="modal-footer justify-content-center" style="margin-top:50px">

            <input  title="تعديل القسم المحدد" type="submit" value=" تعديل القسم" class="btn btn-success" />
            <button title="إغلاق النافذة"  type="button" class="btn btn-warning" data-dismiss="modal">إغلاق</button>
        </div>

    </div>
}





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
