@model IEnumerable<ArchiveProject2019.Models.RelatedDocument>

@{
    ViewBag.Title = "الوثائق المرتبطة";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}


@Html.Partial("_StartView")


@if (ViewBag.Msg != null)
{


    if (ViewBag.Msg == "PermissionError")
    {
        <div class="alert alert-warning enterRemove" style="text-align:center;font-size:larger">
            <span class="glyphicon glyphicon-bell">

            </span>
            لا يمكن القيام بالعملية لعدم القدرة على ذلك

        </div>
    }
    if (ViewBag.Msg == "CreateError")
    {
        <div class="alert alert-warning enterRemove" style="text-align:center;font-size:larger">
            <span class="glyphicon glyphicon-bell">

            </span>
            لا يمكن أن يكون الاسم مكرر، يجب إعادة الإدخال

        </div>
    }


    if (ViewBag.Msg == "CreateSuccess")
    {
        <div class="alert alert-info enterRemove" style="text-align:center;font-size:larger">
            <span class="glyphicon glyphicon-bell">

            </span>
            تمت عملية الإضافة بنجاح
        </div>
    }


    if (ViewBag.Msg == "EditSuccess")
    {
        <div class="alert alert-success enterRemove" style="text-align:center;font-size:larger">
            <span class="glyphicon glyphicon-bell">

            </span>
            تمت عملية تعديل البيانات بنجاح
        </div>
    }

    if (ViewBag.Msg == "EditError")
    {
        <div class="alert alert-warning enterRemove" style="text-align:center;font-size:larger">
            <span class="glyphicon glyphicon-bell">

            </span>
            لا يمكن أن يكون الاسم مكرر، يجب إعادة الإدخال

        </div>
    }


    if (ViewBag.Msg == "DeleteError")
    {
        <div class="alert alert-warning enterRemove" style="text-align:center;font-size:larger">
            <span class="glyphicon glyphicon-bell">

            </span>
            لايمكن القيام بعمليةالحذف، العمليةغير مسموحة

        </div>
    }
    if (ViewBag.Msg == "DeleteSuccess")
    {
        <div class="alert alert-danger enterRemove" style="text-align:center;font-size:larger">
            <span class="glyphicon glyphicon-bell">

            </span>
            تمت عملية الحذف بنجاح


        </div>
    }



}

<a href="@Url.Action("index","Documents")" class="btn btn-default"> قائمة الوثائق  <i class="glyphicon glyphicon-backward"></i></a>

<table id="form" class="table table-striped table-bordered table-hover dt" style="text-align:center">
    <thead>
        <tr>
            <th>
                النموذج
            </th>
            <th>
                القسم
            </th>

            <th>
                الموضوع
            </th>
            <th>
                العمليات المتاحة
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Document.Form.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Document.Department.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Document.Subject)
                </td>
                <td>
                    <a href="@Url.Action("Edit","Documents",new { id=item.Document.Id})" title="تعديل" class="btn-link  btn-xs  glyphicon glyphicon-edit"></a> |
                    <a href="#" data-form-id="@item.Id" data-Related-id="@item.Document.Id" title="تحرير ارتباط" class="js-release glyphicon glyphicon-remove-sign"></a> |
                    <a href="#" data-form-id="@item.Document.Id" title="ربط وثيقة" class="js-relate glyphicon glyphicon-share"></a> |
                    <a href="@Url.Action("GetRelatedDocument","Documents",new { id=item.Document.Id})" title="عرض الوثائق المرتبطة" class="btn-link js-Details  btn-xs  glyphicon glyphicon-folder-open"></a> |
                    <a href="@Url.Action("Details","Documents",new { id=item.Document.Id})" title="تفاصيل" class="btn-link js-Details  btn-xs  glyphicon glyphicon-book"></a>
                </td>
            </tr>
        }
    </tbody>


</table>

<div id="SearchResult"></div>

@Html.Partial("_LastView")




<div class="modal" tabindex="-1" id="NewModal" sdata-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 id="changeText" class="modal-title"></h4>
            </div>
            <div class="modal-body" id="partialPlaceHolder">

            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>

    $("#btnNewModel").on("click", function () {

        $("#changeText").text("القائمة الفرعية- إختيار نموذج معين");
        var url = '@Url.Action("form", "Documents")'

        $("#partialPlaceHolder").load(url, function () {
            $('#NewModal').modal('show');
        });
    });

    $("#form").on("click", ".js-relate", function () {

        $("#changeText").text("القائمة الفرعية- إختيار نموذج معين");

        var url = '@Url.Action("RelateDocument", "Documents")'
        url = url + '/' + $(this).attr("data-form-id");

        $("#partialPlaceHolder").load(url, function () {
            $('#NewModal').modal('show');
        });
    });


    $("#form").on("click", ".js-release", function () {
        $.ajax({
            type: "POST",
            url: "/Documents/Release",
            contentType: "application/json; charset=utf-8",
            data: '{"id":"' + $(this).attr("data-form-id") + '","id2":"' + $(this).attr("data-Related-id") + '"}',
            dataType: "html",
            success: function (result, status, xhr) {
                document.location.reload();
                
            },
            
        });
    });


    $("#btnRefreshModel").on("click", function () {
        window.location.replace('@Url.Action("Index","Documents",new { Id="none"})');
    });
</script>
